{
	"layout": "tabs",
	"sections": [
		{
			"title": "基本資料",
			"id": "tab-basic",
			"fields": [
				{
					"name": "title",
					"label": "項目標題",
					"required": true,
					"type": "string"
				},
				{
					"name": "description",
					"label": "說明文字",
					"required": true,
					"type": "text"
				},
				{
					"name": "price",
					"type": "integer",
					"required": true,
					"label": "價格"
				},
				{
					"name": "highlight",
					"label": "影片亮點",
					"type": "text"
				}, 
				{
					"name": "factors",
					"label": "影片元素",
					"type": "string"
				},
				{
					"name": "length",
					"type": "string",
					"label": "影片長度",
					"required": true
				},
				{
					"name": "strategy",
					"label": "影片策略",
					"type": "text"
				},
				{
					"name": "produceTeam",
					"label": "製作團隊",
					"type": "string"
				},
				{
					"name": "context",
					"label": "適用情境",
					"type": "string",
					"tip": "影片播放目的",
					"required": true
				},
				{
					"name": "position",
					"type": "string",
					"label": "適合播放版位"
				},
				{
					"name": "keywords",
					"type": "collection",
					"related": "keyword",
					"valueMap": {
						"label": "word",
						"value": "id"
					},
					"valueOnCreate": "word",
					"valueType": "integer",
					"label": "關鍵字",
					"required": true,
					"layout": "tags-selection",
					"autoCreate": true
				},
				{
					"name": "delivery",
					"type": "string",
					"label": "交付項目",
					"tip": "你將會得到...",
					"required": true
				},
				{
					"name": "period",
					"type": "string",
					"label": "交期",
					"required": true
				},
				{
					"name": "submitFactorDescription",
					"label": "提交素材說明",
					"tip": "用戶需提交素材",
					"type": "text"
				}
			]
		},
		{
			"title": "附加價格",
			"id": "tab-addition-prices",
			"fields": [
				{
					"name": "discountPrice",
					"type": "integer",
					"label": "優惠價"
				}, 
				{
					"name": "urgentPrice",
					"type": "integer",
					"label": "急件加價"
				},
				{
					"name": "urgentDescription",
					"type": "text",
					"label": "急件加價說明"
				},
				{
					"name": "customizePrice",
					"type": "integer",
					"label": "特殊加價"
				},
				{
					"name": "customizeDescription",
					"type": "text",
					"label": "特殊加價說明"
				}
			]
		},
		{
			"title": "劇本結構",
			"id": "tab-scenario",
			"fields": [
				{
					"name": "scenario",
					"type": "json",
					"layout": "list",
					"fields": [
						{
							"name": "label",
							"type": "string",
							"label": "標籤",
							"width": "10%"
						},
						{
							"name": "image",
							"type": "image-file",
							"label": "圖片",
							"width": "20%"
						},
						{
							"name": "description",
							"type": "text",
							"label": "敍述文字",
							"width": "65%"
						}
					],
					"label": "劇本結構",
					"required": true
				}
			]
		},
		{
			"title": "影片網址",
			"id": "tab-film-urls",
			"fields": [
				{
					"name": "productUrls",
					"type": "json",
					"label": "影片網址或圖片",
					"required": true,
					"layout": "media-sort-list",
					"fields": [
						{
							"name": "url",
							"type": "video-url",
							"layout": "button",
							"label": "影片網址"
						},
						{
							"name": "image",
							"type": "image-file",
							"layout": "button",
							"label": "圖片"
						}
					]
				}
			]
		},
		{
			"title": "需求素材",
			"id": "tab-demand-factors",
			"fields": [
				{
					"name": "submitFactors",
					"label": "用戶需提交素材",
					"type": "json",
					"required": true,
					"layout": "field-sort-list",
					"fields": [
						{
							"name": "title",
							"type": "string",
							"label": "問題敍述",
							"htmlwrap": "label",
							"htmlclass": "form-label"
						},
						{
							"name": "type",
							"type": "string",
							"related": "globals.submitFactorOptions",
							"layout": "selection",
							"label": "資料型別",
							"emptylabel": " -- 請選擇型別 -- ",
							"htmlwrap": "p",
							"htmlclass": "text-muted m-0",
							"showFormat": "型別：%v"
						}
					]
				}
			]
		},
		{
			"title": "製作流程",
			"id": "tab-produce-flow",
			"fields": [
				{
					"name": "produceFlow",
					"label": "製作流程",
					"type": "json",
					"required": true,
					"layout": "field-sort-list",
					"fields": [
						{
							"name": "title",
							"type": "string",
							"label": "流程步驟",
							"htmlwrap": "label",
							"htmlclass": "form-label"
						},
						{
							"name": "days",
							"type": "string",
							"label": "處理天數",
							"htmlwrap": "p",
							"htmlclass": "text-muted m-0",
							"showFormat": "需 %v 天"
						}
					]
				}
			]
		},
		{
			"title": "其它",
			"id": "tab-others",
			"fields": [
				{
					"name": "remarks",
					"type": "text",
					"label": "其它備註"
				},
				{
					"name": "otherProperties",
					"label": "其它屬性說明",
					"type": "json",
					"layout": "list",
					"fields": [
						{
							"name": "title",
							"type": "string",
							"label": "標題"
						},
						{
							"name": "description",
							"type": "text",
							"label": "文字"
						}
					]
				}
			]
		}
	]
}